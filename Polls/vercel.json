{
  "builds": [
    {
      "src": "Polls/Polls/client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "Polls/Polls/client/build" }
    },
    {
      "src": "Polls/Polls/server/api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    "rewrites": [{ "source": "/(.*)", "destination": "/Polls/Polls/client/src/index.html"
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/Polls/Polls/server/api/$1" },
    { "src": "/(.*)", "dest": "/Polls/Polls/client/src/index.html" }
  ]
}
